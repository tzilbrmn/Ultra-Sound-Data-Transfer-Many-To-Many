<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewVisitCard">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="376dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="@string/viewVCWelcome"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="398dp"
        android:layout_height="444dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/full_nameTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/positionTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companyTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telephoneTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/faxTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mobileTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/websiteTextView"
                android:layout_width="376dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/edivcBtn"
        android:layout_width="84dp"
        android:layout_height="43dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="16dp"
        android:onClick="Edit"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sendvcBtn"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="17dp"
        android:onClick="Send"
        android:text="Send"
        app:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/deletevcBtn"
        android:layout_width="91dp"
        android:layout_height="45dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="17dp"
        android:onClick="Delete"
        android:text="Delete"
        app:backgroundTint="#F10505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>